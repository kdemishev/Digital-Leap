@model dynamic

@{
	ViewBag.Title = "Contact Us";
	Layout = "~/Views/Shared/_ContentLayout.cshtml";
	ViewBag.ContainerClass = "contact-banner";
}

<div class="container content-margin contact">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6 col-md-12 offset-lg-3 col-lg-6">
			<div class="panel-dl contact-form">
				<div class="icon"><img src="../../img/mail-01.svg" alt=""></div>
				<form>
					<div class="form-group">
						<label for="fullName">Full Name</label> 
						<input type="text" class="form-control" id="fullName" placeholder="">
					</div>
					<div class="form-group">
						<label for="emailAdress">Email Adress</label> 
						<input type="email" class="form-control" id="emailAdress" aria-describedby="emailHelp" placeholder="">
					</div>
					<div class="form-group">
						<label for="commentsTextarea">Comments</label>
						<textarea class="form-control" id="commentsTextarea" rows="4"></textarea>
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-primary btn-lg blue-btn">Send Your Message</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
